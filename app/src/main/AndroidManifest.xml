<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="Diploma Paper"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiplomaPaperss"
        tools:targetApi="34"
        tools:replace="android:allowBackup,android:icon,android:label,android:theme,android:appComponentFactory"
        android:appComponentFactory="@string/app_name">

        <activity android:name=".ui.Semester.PDFViewerActivity" />
        <activity android:name=".ui.Semester.PaperListActivity" />
        <activity android:name=".ui.Semester.SubjectActivity" />
        <activity android:name=".ui.Semester.PaperSelect" />
        <activity android:name=".ui.bottomnavigation.EditProflie" />
        <activity android:name=".ui.Semester.Semester" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.base.OnBodyingActivity" />

        <activity
            android:name=".ui.base.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DiplomaPaperss">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.Home.HomeMainActivity" />

    </application>

</manifest>

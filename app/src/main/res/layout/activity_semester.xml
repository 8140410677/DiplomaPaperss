<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Semester.SemesterActivity">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessLeaf" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/semester"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:text="@string/semester"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/firstsemester"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_semester1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semester" />

    <ImageView
        android:id="@+id/bookIcon1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/sembooklogo"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/firstsemester"
        app:layout_constraintTop_toTopOf="@+id/firstsemester" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semester_1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/firstsemester"
        app:layout_constraintEnd_toEndOf="@+id/firstsemester"
        app:layout_constraintStart_toStartOf="@+id/firstsemester"
        app:layout_constraintTop_toTopOf="@+id/firstsemester" />


    <LinearLayout
        android:id="@+id/secondSemester"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_semester2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstsemester" />

    <ImageView
        android:id="@+id/bookIcon2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/secondsemester"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/secondSemester"
        app:layout_constraintTop_toTopOf="@+id/secondSemester" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semester_2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/secondSemester"
        app:layout_constraintEnd_toEndOf="@+id/secondSemester"
        app:layout_constraintStart_toStartOf="@+id/secondSemester"
        app:layout_constraintTop_toTopOf="@+id/secondSemester" />

    <LinearLayout
        android:id="@+id/thirdSemester"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_semester3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondSemester" />

    <ImageView
        android:id="@+id/bookIcon3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/thirdsem"
        app:layout_constraintEnd_toStartOf="@+id/textview3sem"
        app:layout_constraintStart_toStartOf="@+id/thirdSemester"
        app:layout_constraintTop_toTopOf="@+id/thirdSemester" />


    <TextView
        android:id="@+id/textview3sem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semester_3"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/thirdSemester"
        app:layout_constraintEnd_toEndOf="@+id/thirdSemester"
        app:layout_constraintStart_toStartOf="@+id/thirdSemester"
        app:layout_constraintTop_toTopOf="@+id/thirdSemester" />

    <LinearLayout
        android:id="@+id/fourthsemester"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_semester4"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdSemester" />

    <ImageView
        android:id="@+id/bookIcon4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/fourthsem"
        app:layout_constraintEnd_toStartOf="@+id/textview4sem"
        app:layout_constraintStart_toStartOf="@+id/fourthsemester"
        app:layout_constraintTop_toTopOf="@+id/fourthsemester" />

    <TextView
        android:id="@+id/textview4sem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semester_4"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fourthsemester"
        app:layout_constraintEnd_toEndOf="@+id/fourthsemester"
        app:layout_constraintStart_toStartOf="@+id/fourthsemester"
        app:layout_constraintTop_toTopOf="@+id/fourthsemester" />

    <LinearLayout
        android:id="@+id/fifthSemester"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_semester5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourthsemester" />

    <ImageView
        android:id="@+id/bookIcon5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/fifthsem"
        app:layout_constraintEnd_toStartOf="@+id/textview5sem"
        app:layout_constraintStart_toStartOf="@+id/fifthSemester"
        app:layout_constraintTop_toTopOf="@+id/fifthSemester" />

    <TextView
        android:id="@+id/textview5sem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semester_5"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fifthSemester"
        app:layout_constraintEnd_toEndOf="@+id/fifthSemester"
        app:layout_constraintStart_toStartOf="@+id/fifthSemester"
        app:layout_constraintTop_toTopOf="@+id/fifthSemester" />

    <LinearLayout
        android:id="@+id/sixSemester"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_semester6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthSemester" />

    <ImageView
        android:id="@+id/bookIcon6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:importantForAccessibility="no"
        android:src="@drawable/sixsemester"
        app:layout_constraintEnd_toStartOf="@+id/textview6sem"
        app:layout_constraintStart_toStartOf="@+id/sixSemester"
        app:layout_constraintTop_toTopOf="@+id/sixSemester" />

    <TextView
        android:id="@+id/textview6sem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semester_6"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sixSemester"
        app:layout_constraintEnd_toEndOf="@+id/sixSemester"
        app:layout_constraintStart_toStartOf="@+id/sixSemester"
        app:layout_constraintTop_toTopOf="@+id/sixSemester" />

</androidx.constraintlayout.widget.ConstraintLayout>